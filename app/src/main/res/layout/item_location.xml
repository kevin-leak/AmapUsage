<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/locationItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_item_location"
    android:gravity="center"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/locationChecker">

        <TextView
            android:id="@+id/tvLocationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:gravity="center_vertical|start"
            android:textColor="#373636"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvLocationDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvLocationName"
            android:layout_marginTop="2dp"
            android:lines="1"
            android:ellipsize="end"
            android:gravity="center_vertical|start"
            android:textColor="#AAAAAA"
            android:textSize="12sp" />

    </RelativeLayout>

    <RadioButton
        android:id="@+id/locationChecker"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:background="@drawable/selector_check_state"
        android:button="@null"
        android:gravity="center" />

</RelativeLayout>
