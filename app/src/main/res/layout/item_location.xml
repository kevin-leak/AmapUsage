<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/locationItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:minHeight="1dp"
    android:background="@drawable/selector_item_location_back">

    <TextView
        android:id="@+id/tvLocationName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:ellipsize="end"
        android:textColor="#373636"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvLocationDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvLocationName"
        android:ellipsize="end"
        android:layout_marginEnd="50dp"
        android:textColor="#878787"
        android:textSize="14sp" />

    <RadioButton
        android:id="@+id/locationChecker"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_check_state"
        android:button="@null" />

</RelativeLayout>
