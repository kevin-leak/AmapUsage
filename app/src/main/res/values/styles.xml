<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">#ffffff</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:screenOrientation">portrait</item>
    </style>




    <style name="myToolBar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/gray</item>
    </style>


    <!--dialog去阴影-->
    <style name="dialogNoBg">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="bottomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_fr_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_fr_out</item>
    </style>


</resources>